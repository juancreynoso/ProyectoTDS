Program // Distintas versiones de factorial
{
    void print(integer x) extern;
    void assert(integer n, integer m) extern;

    integer factorialv1(integer x){
        if (x == 0) then {
            return 1;
        } else {
            if (x == 1) then {
                return x;
            } else {
                return x * factorialv1(x-1);
            }
        }
    }

    integer factorialv2(integer x, integer z){
        if (x == 0) then {
            return z;
        } else {
            if (x == 1) then {
                return z;
            } else {
                return factorialv2(x-1, z * x);
            }
        }
    }

    integer factorialv3(integer x) {
        integer result = 1;
        if (x == 1 || x == 0) then {
            return result;
        }

        while (x > 1) {
            result = result * x;
            x = x - 1;
        }

        return result;
    }


    void main() {
        integer x = factorialv1(4);
        integer z = factorialv2(4, 1);
        integer y = factorialv3(4);
        assert(x, 24);
        assert(z, 24);
        assert(y, 24);
        print(x);
        print(z);
        print(y);
    }
}